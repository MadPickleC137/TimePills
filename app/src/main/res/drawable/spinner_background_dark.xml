<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2B554C"
                android:centerColor="#1F3E37"
                android:endColor="#152925"
                android:angle="0"/>
            <padding android:right="12dp"
                android:left="12dp"/>
            <corners android:radius="@dimen/bottom_corner_radius"/>
        </shape>

    </item>
    <item
        android:drawable="@drawable/ic_arrow_up"
        android:width="20dp"
        android:height="20dp"
        android:gravity="end|center_vertical"/>
</layer-list>